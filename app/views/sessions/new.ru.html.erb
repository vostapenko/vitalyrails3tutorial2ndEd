<% provide(:title, "Войти") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>

      <%= label_tag :email, "Е-майл" %>
      <%= text_field_tag :email %>

      <%= label_tag :password, "Пароль" %>
      <%= password_field_tag :password %>
      
      <%= check_box_tag :remember_me, true, params[:remember_me] %>
      <%= label_tag :remember_me, "Запомнить меня" %>

      <p><%= link_to "Забыли пароль?", new_password_reset_path%></p>

      <%= submit_tag "Войти", class: "btn btn-large btn-primary" %>
    
    <% end %>

    <p>Новый пользователь? <%= link_to "Создать учётную запись", signup_path %></p>
  </div>
</div>
