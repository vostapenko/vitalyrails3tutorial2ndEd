<% provide(:title, 'Редактировать профиль пользователя') %>
<h1>Обновить Ваш профиль</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages.ru' %>

      <%= f.label :name, "Имя" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Е-майл" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :locale, "Локаль" %>
      <%= f.select :locale, User::LOCALE %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>                       

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">изменить</a>
  </div>
</div>
