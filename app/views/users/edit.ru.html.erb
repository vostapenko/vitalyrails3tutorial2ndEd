<% provide(:title, 'Редактировать профиль пользователя') %>
<h1>Обновить Ваш профиль</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'edit_fields', f: f %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>                       

    <%= gravatar_for @user %>
    <%= link_to 'изменить', 'http://gravatar.com/emails', target: '_blank' %> 
  </div>
</div>
